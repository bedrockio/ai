{
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
  }
}